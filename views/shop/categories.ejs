<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/productBootstrap.css">
    
</head>
<body>
    <%- include('../includes/nav.ejs') %>

    <% if(categories.length > 0) { %>
        
        <div class="container pb-5 mt-n2 mt-md-n3">
            <div class="row">
                <div class="col-xl-9 col-md-8">
                    <h2 class="h6 d-flex flex-wrap justify-content-between align-items-center px-4 py-3 bg-secondary"><span>Categories</span><a class="font-size-sm" href=""><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-left" style="width: 1rem; height: 1rem;"><polyline points="15 18 9 12 15 6"></polyline></svg> </a></h2>
                    <!-- Item-->
                   
                    <% categories.forEach( catagory => { %>

                        <div class="d-sm-flex justify-content-between my-4 pb-4 border-bottom">
                            <div class="media d-block d-sm-flex  text-sm-left">
                                <a class="cart-item-thumb mx-auto mr-sm-4" href="#">
                                    <img height="200px" width="200px" src="\<%= catagory.imageUrl %>" alt="<%= catagory.name %>">
                                </a>
                                <div class="media-body pt-3 mx-3">
                                    <h3 class="product-card-title font-weight-semibold border-0 pb-0">
                                        <a href="#">
                                            <%= catagory.name %>
                                        </a>
                                    </h3>
                                    <div class="font-size-sm"><%= catagory.description %></div>

                                </div>
                            </div>
                            <div class="pt-2 pt-sm-0 pl-sm-3 mx-auto mx-sm-0 text-center text-sm-left" style="max-width: 10rem;">
                                <!-- <div class="form-group mb-2">
                                    <label for="quantity1">Products Quntity</label>
                                    <div class="form-control form-control-sm">10</div>
                                </div> -->
                                <button class="btnUrl btn btn-outline-secondary btn-sm btn-block mb-2" type="button">
                                    <a class="url" href="/category/<%= catagory._id %>">
                                     View Products
                                    </a>
                                </button>
                                
                            </div>
                        </div>
                    <% }) %>




                        
    </div>
    </div>
    </div>

    <div class="text-center my-2">
        <% if(hasPrePage) { %>
            <a href="/admin/products?page=<%= prePage %>" class="btn btn-primary mx-2">Previous</a>
        <% }%>
        <a href="/admin/products?page=<%= currentPage %>" class="btn btn-primary mx-2 active"><%= currentPage %></a>
        <% if(hasNextPage) { %>
            <a href="/admin/products?page=<%= nextPage %>" class="btn btn-primary mx-2">Next</a>
        <% } %>    
    </div>
    <% } else { %>
        <h2 class="error_msg">No Catagories Found!!</h2>
    <% } %>    
    <footer class="page-footer font-small">
        <div class="footer-copyright text-center py-3">Â© 2022 Copyright: digitalMall
        </div>  
    </footer>
</body>
</html>