<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/productBootstrap.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>

    <%  if(orders.length > 0) { %>
        <% orders.forEach( order => {  %>

            <div class="container pb-5 mt-n2 mt-md-n3 my-4">
                <div class="row">
                    <div class="col-xl-9 col-md-8">
                        <h2 class="h6 d-flex flex-wrap justify-content-between align-items-center px-4 py-3 bg-secondary"><span>Order</span></h2>
                <%  order.products.forEach( p => { %>

                        <div class="d-sm-flex justify-content-between my-4 pb-4 border-bottom">
                            <div class="media d-block d-sm-flex text-sm-left">
                                <a class="cart-item-thumb mx-auto mr-sm-4" href="#">
                                    <img height="200px" width="200px" src="\<%= p.product.imageUrl %>" alt="<%= p.product.title %>">
                                </a>
                                <div class="media-body pt-3 mx-3">
                                    <h3 class="product-card-title font-weight-semibold border-0 pb-0">
                                        <a href="#">
                                            <%= p.product.title %>
                                        </a>
                                    </h3>
                                    <div class="font-size-sm"><span class="text-muted mr-2">Price: </span> ₹<%= p.product.price %></div>
                                    <div class="font-size-sm" ><span class="text-muted mr-2">MRP: </span> ₹<%= p.product.mrp %></div>
            
                                </div>
                            </div>
                            <div class="pt-2 pt-sm-0 pl-sm-3 mx-auto mx-sm-0 text-center text-sm-left" style="max-width: 10rem;">
                                <div class="form-group mb-2">
                                    <label for="quantity1">Products Quntity</label>
                                    <div class="form-control form-control-sm" type="number"><%= p.qty %></div>
                                </div>
                                
                            </div>
                        </div>

                <%  }) %>

            </div>
            </div>
            </div>        

            
            
    
        <% }) %>
    
    <% } else { %>    
        <h1 class="text-center my-3">No Orders Found...</h1>
    <% } %>    
    <footer class="page-footer font-small">
        <div class="footer-copyright text-center py-3">© 2022 Copyright: digitalMall
        </div>  
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script> 
    
</body>
</html>